{
	"name": "unimail",
	"type": "module",
	"version": "0.1.1-beta.0",
	"description": "A lightweight, framework-agnostic email templating library that generates beautiful, standards-compliant HTML with Tailwind-like utilities â€” no React required.",
	"author": "Chisachoo",
	"license": "MIT",
	"keywords": [
		"email",
		"templating",
		"html",
		"framework-agnostic",
		"tailwind",
		"inline-css",
		"react-email-alternative",
		"bun"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		},
		"./core": {
			"types": "./dist/core/index.d.ts",
			"import": "./dist/core/index.js",
			"require": "./dist/core/index.cjs"
		},
		"./mailer": {
			"types": "./dist/mailer/index.d.ts",
			"import": "./dist/mailer/index.js",
			"require": "./dist/mailer/index.cjs"
		},
		"./mailer/transports": {
			"types": "./dist/mailer/transports/index.d.ts",
			"import": "./dist/mailer/transports/index.js",
			"require": "./dist/mailer/transports/index.cjs"
		},
		"./transports": {
			"types": "./dist/mailer/transports/index.d.ts",
			"import": "./dist/mailer/transports/index.js",
			"require": "./dist/mailer/transports/index.cjs"
		}
	},
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "bun run clean && tsup",
		"build:types": "tsc -p tsconfig.json --emitDeclarationOnly --declaration --declarationMap false --noEmit false",
		"dev": "bun run src/examples/demo.ts",
		"preview": "bun --hot src/examples/serve.ts",
		"test": "bun test",
		"clean": "rm -rf dist",
		"format:fix": "prettier --write .",
		"format": "prettier --write .",
		"lint:fix": "eslint . --fix",
		"lint": "eslint .",
		"prepare": "husky"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^6.0.0",
		"@types/bun": "latest",
		"eslint": "^9.37.0",
		"eslint-plugin-format": "^1.0.2",
		"eslint-plugin-perfectionist": "^4.15.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"prettier": "3.6.2",
		"tsup": "^8.5.0"
	},
	"lint-staged": {
		"*.{ts,tsx,json,css,md}": "eslint --fix",
		"*.{css,md}": "prettier --write"
	}
}
